.session_content.span16
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    %fieldset
      %legend= t("devise.passwords.forgot")
      .clearfix
      .clearfix
        = f.label :email
        .input= f.email_field :email
      .actions
        = f.submit t("devise.passwords.send_password"), :class => "btn primary"
  = render :partial => "user/shared/links"
